{
  // 禁用位运算符(^、|、&)
  "bitwise": true,
  // 强制使用花括号({}),循环或者条件语句必须使用花括号包围
  "curly": true,
  // ECMAScirpt版本
  "esversion": 5,
  // 强制在 for in 中使用hasOwnProperty进行自属性检查
  "forin": true,
  // 不允许变更原型链，new Date().format()使用局部jsHint检查
  "freeze": true,
  // 禁止定义之前使用变量，忽略 function 函数声明
  "latedef": true,
  // 逻辑复杂度检查
  "maxcomplexity": true,
  // 最大嵌套深度
  "maxdepth": 4,
  // function的最大参数列表数量，建议使用(data,callback)，多于4个的参数使用option进行封装，后台可能传递req/res
  "maxparams": 4,
  // function中最大语句数量，单方法中逻辑语句不超过10行，多于则需要进行闭包封装
  "maxstatements": 10,
  // 禁止未使用的构造器
  "nonew": true,
  // 禁止使用错误的typeof类型
  "notypeof": true,
  // 全局严格模式
  "strict": "global",
  // 禁止使用未声明的变量
  "undef": true,
  // 禁止生命未使用的变量
  "unused": true,
  // 禁止使用eval
  "evil": true
}